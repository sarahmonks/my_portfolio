
	<div class="row">
		
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<%= form_for @sticky_note do |f| %>
			<% if @sticky_note.errors.any? %>
				<h3>
					<%= pluralize(@sticky_note.errors.count, "error") %> prohibited this Sticky note from being saved.
				</h3>

				<ul>
				<% @sticky_note.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>

			<% end %>
		
		<div class="form-group">
			<%= f.label :title %><br>
			<%= f.text_field :title, :placeholder => "Title" , :required => true, :maxlength => 100, class: 'form-control' %>

		</div>
                  

		<div class="form-group">
			<%= f.label :text %><br>
			<%= f.text_area :text, :placeholder => "Text" , :required => true, :maxlength => 1000, class: 'form-control' %>
		</div>

  		<div class="form-group">
			<%= f.label :color, 'Choose the color of your note'%><br>
			<%= f.select :color, ['yellow', 'blue', 'green', 'purple']%>
		</div>

                
		<div class="form-group">
			<%= f.submit "Submit" , class: 'btn btn_yellow btn_submit' %>
		</div>
  

		<% end %>
		</div>

	</div>
