

<div class="sticky_note_section section_wrapper">
<div class="overlay_black_even container-fluid">
     
     <div class="row">
             <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10 col-xxs-12 wow animated bounce">
                   <div>
                        <h2 class="noteboard_heading">Noteboard</h2>
                   </div>

              </div>      
      </div> 
        <div class="row">
             <div class="col-md-4 col-sm-12 col-xs-12  wow animated bounce">
                
                     <%= link_to raw("<i class='fa fa-caret-left'></i> Back to Works"), pages_works_path, class: 'blue_text' %>     
                 

              </div>
     </div>

         <div class="row">    
             <div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 col-xxs-12 wow animated bounce">
                   <p class="sub-head-light">
                      Here are all your sticky notes. Feel free to  <%= link_to 'create more', new_sticky_note_path, class: 'yellow_link' %>       
                   </p>

            </div>
      </div>
      
<div class="row">
	
   	<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
      		<div id="note_board">
      		    <div class="grey_texture"></div>
             			<ul id="sticky_note_list">
                    <% @sticky_notes.each do |sticky_note| %>



             				   <li class="sticky_note_list_item <%= sticky_note.color %>">
                        <div class="button_area">
                          <%= link_to raw('<i class="fa fa-times"></i>'), sticky_note_path(sticky_note), method: :delete, data: {confirm: 'Are you sure you wish to delete this note?'}, class: 'delete_button' %>
 
                          <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_sticky_note_path(sticky_note), class: 'edit_button' %>
                       
                        </div>
             					      <h3><%= sticky_note.title %></h3>
             					      <p><%= sticky_note.text %></p>
             				   </li>
            
                    <% end %>
       
             				</ul>

      		</div>
   	</div>
</div>
</div>
</div>

