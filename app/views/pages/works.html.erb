<div id="dublin_inquirer_section" class="section_wrapper">
    <div class="overlay_black">
        <div class="section_content container-fluid">
               
                <%= render partial: 'partials/intro_section', 
                    :locals => {:section_title => 'Dublin Inquirer App', 
                    :section_intro_paragraph => 'I worked with a cross-functional team, planning, designing and building the following application for the Dublin Inquirer newspaper company and their subscribers. <br>I was lead developer on this project.
                        <br><br>The app is now available on both the Apple App Store and the Google Play Store.',
                    :title_style => 'title_light'} %>



            <div class="row">
                   <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 text-center bounceIn ">
                       <!-- app store buttons -->
                        <%= render partial: 'partials/app_store_button', 
                            :locals => {:store_link => "https://itunes.apple.com/ie/app/dublin-inquirer/id1205172559", 
                                        :store_name => "App Store", :button_icon => "fa-apple"} %>
                        <%= render partial: 'partials/app_store_button', 
                            :locals => {:store_link => "http://play.google.com/store/apps/details?id=com.dublininquirer.dublininquirerapp", 
                                        :store_name => "Play Store", :button_icon => "fa-android"} %>

                  </div><!--End app-button-div-->
            </div>                      

            <div id="dublin_inquirer_carousel" class="owl-carousel owl-theme row">
                <% di_app_screenshots.each do |screenshot| %>
                    <div class="item">
                        <div class="thumbnail">
                            <%= image_tag("#{screenshot['img_src']}", size: "407x705", :alt => "#{screenshot['img_title']}", class: "img-responsive carousel_phone") %>
                                  
                            <div class="caption">
                                <h3><%= screenshot['img_title'] %></h3>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div><!--/owl carousel -->
          
        </div><!--/container -->
    </div>
</div>

