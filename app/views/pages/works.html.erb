<div id="dublin_inquirer_section" class="section_wrapper">
    <div class="overlay_black">
        <div class="container-fluid">
               
              <%= render partial: 'partials/intro_section', :locals => {:section_intro_data => section_intro_info['dublin_inquirer_section']} %>



            <div class="row">
                   <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 text-center bounceIn ">
                       <!-- app store buttons -->
                        <%= render partial: 'partials/app_store_button', :locals => {:app_button_info => app_button_info['apple']} %>
                <%= render partial: 'partials/app_store_button', :locals => {:app_button_info => app_button_info['android']} %>

                  </div><!--End app-button-div-->
            </div>                      

            <div id="dublin_inquirer_carousel" class="owl-carousel owl-theme row">
                <% di_app_screenshots.each do |screenshot| %>
                    <div class="item">
                        <div class="thumbnail">
                            <%= image_tag("#{screenshot['img_src']}", size: "407x705", :alt => "#{screenshot['img_title']}", class: "img-responsive carousel_phone") %>
                                  
                            <div class="caption">
                                <h3><%= screenshot['img_title'] %></h3>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div><!--/owl carousel -->
          
        </div><!--/container -->
    </div>
</div>

